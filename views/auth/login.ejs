<%-include('../partials/header')%>
<%-include('../partials/navbar')%>
<%-include('../partials/flash')%>

<div class="form1 login-form1 row">
  <div class="col-11 mx-auto">
    <h1 class="display-6 text-center">Sign in</h1>
    <form action="/login" method="POST" >
      <div class="row g-1 align-items-center mt-4">
        <div class="col-2">
          <label for="username" class="form-label">Username: </label>
        </div>
        <div class="col-10">
          <input type="text" class="form-control text-center" name="username" id="username" placeholder="Name of the User" required>
        </div>
      </div>
      <div class="row g-1 align-items-center mt-2">
        <div class="col-2">
          <label for="password" class="form-label">Password: </label>
        </div>
        <div class="col-10">
          <input type="password" class="form-control text-center"  name="password" id="password" placeholder="Password of the User" required>
        </div>
      </div>
      <div class="row g-1 align-items-center justify-content-center mt-4">
     <div class="col-1">
  <button type="submit" class="btn1 view-btn1 border">login</button>
    </div>
      </div>
      
      <p class="mt-2">Don't have an account? <a href="/register">Signup Now</a></p>
    </form>
  </div>
</div>

<%-include('../partials/footer')%>


