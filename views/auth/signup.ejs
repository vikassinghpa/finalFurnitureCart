<%-include('../partials/header')%>
<%-include('../partials/navbar')%>

<div class="form1 signup-form1 row">
  <div class="col-12">
    <h1 class="display-6 text-center">Sign Up</h1>
      <form action="/register" method="POST">
        <div class="row g-1 align-items-center mt-4">
            <div class="col-2">
                <label for="first" class="form-label">Firstname: </label>
            </div>
            <div class="col-10"  >
                <input type="text" class="text-center form-control" name="firstName" id="first" placeholder="Firstname of the User" required>
            </div>
        </div>
        <div class="row g-1 align-items-center mt-2">
            <div class="col-2">
                <label for="last" class="form-label">Lastname: </label>
            </div>
            <div class="col-10">
                <input type="text" class="text-center form-control" name="lastName" id="last" placeholder="Lastname of the User">
            </div>
        </div>
        <div class="row g-1 align-items-center mt-2">
            <div class="col-2">
                <label for="username" class="form-label">Username: </label>
            </div>
            <div class="col-10">
                <input type="text" class="text-center form-control" name="username" id="username" placeholder="Username of the User" required>
            </div>
        </div>
        <div class="row g-1 align-items-center mt-2">
            <div class="col-2">
                <label for="email" class="form-label">Email: </label>
            </div>
            <div class="col-10">
                <input type="email" class="text-center form-control" name="email" id="email" placeholder="Email address of the User" required>
            </div>
        </div>
        <div class="row g-1 align-items-center mt-2">
            <div class="col-2">
                <label for="phone" class="form-label">Mobile No.: </label>
            </div>
            <div class="col-10">
                <input type="tel" class="text-center form-control" name="phoneNumber" id="phone" placeholder="Mobile Number of the User" required>
            </div>
        </div>
        <div class="row g-1 align-items-center mt-2">
            <div class="col-2">
                <label for="password" class="form-label">Password: </label>
            </div>
            <div class="col-10">
                <input type="password" class="text-center form-control"  name="password" id="password" placeholder="Password of the User" required>
            </div>
        </div>
        <div class="row align-items-center mt-2">  
            <div class="col-12">
                <span>Want to register as: </span>
                  <label for="role" class="form-label mx-5">Buyer: </label>
                  <input class="form-check-input" type="radio" name="role" id="role" placeholder="Role of the User" value="buyer" required>
                  <label for="role" class="form-label mx-5">Seller: </label>
                  <input class="form-check-input" type="radio" name="role" id="role" placeholder="Role of the User" value="seller" required>
            </div>
        </div>
        <div class="row g-1 align-items-center justify-content-center mt-3">
            <div class="col-2">
                <button type="submit" class="btn1 view-btn1 border">Sign Up</button>
            </div>
        </div>
        <p class="mt-2">Do you have an account? <a href="/login">Login Now</a></p>
      </form>
  </div>
</div>

<%-include('../partials/footer')%>