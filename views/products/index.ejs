<section class="container-fluid position-item1 mt-2">
<div class="product-list1">
 <div class="product-item1">
  <h6>Office Furniture</h6>
  <a href="/Office-Furniture"><button class="view-all-btn1 btn1">View All</button></a>
 </div>
 <div class="upper-card1">
  <% for(let item of products){ %>
    <div class="d-flex flex-row">
    <% if(item.type === 'Office-Furniture'){ %>
    <div class="card1">
          <img class="card-img1" src="<%=item.frontImg%>" alt="">
     <div class="card-body1 text-center">
      <h5 class="d-block text-truncate card-title"><%=item.name%></h5>
      <span class="btn like-btn" productId="<%=item._id%>">
        <% if(currentUser && currentUser.wishList.includes(item._id)){ %>
         <i class="fa-solid fa-heart"></i>
        <% }else{ %>
         <i class="fa-regular fa-heart"></i>
        <% } %>
      </span>
      <h5 class="card-title">Rs. <%=item.price%></h5>
      <a href="/products/<%=item._id%>"><button class="btn1 view-btn1">View Detail</button></a>
    <%  if(currentUser && currentUser.role == 'seller'){ %>
        <a href="/products/<%=item._id%>/edit"><button class="btn1 edit-btn1">Edit</button></a>
        <form class="d-inline" action="/products/<%=item._id%>?_method=DELETE" method="POST">
          <button class="btn1 delete-btn1">Delete</button>
        </form>
     <% } %>
     </div>
    </div>
    </div>
    <% } %>  
   <% } %>
  </div>
 </div>
 
</section>

